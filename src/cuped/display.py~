class CuPEDFont(object):
    font_name = 'Arial'
    font_size = 12
    is_bold = false
    is_italic = false
    is_underline = false
    is_strike_through = false
    is_small_caps = false


class CuPEDColor(object):
    red = 255
    green = 255
    blue = 255
